@model IEnumerable<MovieReviewSystem.Models.GenreDto>

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GenreID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
