@model MovieReviewSystem.Models.MovieDto

@{
    ViewData["Title"] = "Movie Details";
}

<h1>@Model.Title</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Director</dd>
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Average Rating</dt>
        <dd class="col-sm-10">@Model.AverageRating.ToString("F1")</dd>
        <dt class="col-sm-2">Genres</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Genres.Select(g => g.Name))</dd>
    </dl>
</div>
<div>
    <img src="@Model.PosterURL" alt="@Model.Title Poster" style="max-width: 300px;" />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MovieID" class="btn btn-warning">Edit</a>
    <a asp-action="Reviews" asp-route-id="@Model.MovieID" class="btn btn-primary">Add Review</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
