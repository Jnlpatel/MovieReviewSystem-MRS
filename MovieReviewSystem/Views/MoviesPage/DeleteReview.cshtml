@model MovieReviewSystem.Models.DeleteReviewRequestDto

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewDate)
        </dd>
    </dl>

    <form asp-action="DeleteReview">
        <input type="hidden" asp-for="ReviewID" />
        <input type="hidden" asp-for="MovieID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Reviews" asp-route-id="@Model.MovieID">Back to Reviews</a>
    </form>
</div>
